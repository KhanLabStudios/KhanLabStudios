{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "description": "A project.json file, describing a project page.",
    "properties": {
        "position": {
            "type": "object",
            "description": "The position the project is located at on the world map.",
            "properties": {
                "x": {
                    "type": "number",
                    "description": "The x position of the location on the world map, in pixels."
                },
                "y": {
                    "type": "number",
                    "description": "The y position of the location on the world map, in pixels."
                }
            },
            "required": [ "x", "y" ]
        },
        "title": {
            "type": "string",
            "description": "The title of the project, shown in the header of the page and tab bar."
        },
        "description": {
            "type": "string",
            "description": "A short description of the project, shown in the \"Project Overview\" section of the page and in the project list."
        },
        "author": {
            "type": "string",
            "description": "The name of the author of the project."
        },
        "sections": {
            "type": "array",
            "description": "The sections to include in the project page, ordered from top to bottom.",
            "items": {
                "type": "object",
                "oneOf": [
                    {
                        "properties": {
                            "type": {
                                "type": "string",
                                "const": "header",
                                "description": "The type of the section."
                            },
                            "image": {
                                "type": "object",
                                "description": "Options for showing an image in the header, behind the title and author.",
                                "properties": {
                                    "url": {
                                        "type": "string",
                                        "description": "The url of the image, relative to the project folder. Use a slash at the beginning to make it relative to the dist folder."
                                    },
                                    "position": {
                                        "type": "string",
                                        "description": "The position of the image in the header. See the CSS 'background-position' property for more information."
                                    },
                                    "tint": {
                                        "type": "string",
                                        "description": "The color to tint the image with. Must be a valid CSS color.",
                                        "pattern": "^#[0-9a-fA-F]{8}$"
                                    }
                                },
                                "required": [ "url" ]
                            }
                        },
                        "required": [ "type" ]
                    },
                    {
                        "description": "A description section shows the project description under the heading \"Project Overview\".",
                        "properties": {
                            "type": {
                                "type": "string",
                                "const": "description",
                                "description": "The type of the section."
                            }
                        },
                        "required": [ "type" ]
                    },
                    {
                        "description": "A row section arranges multiple subsections horizontally.",
                        "properties": {
                            "type": {
                                "type": "string",
                                "const": "row",
                                "description": "The type of the section."
                            },
                            "subsections": {
                                "type": "array",
                                "description": "The subsections, ordered right to left.",
                                "items": {
                                    "allOf": [
                                        { "$ref": "#/properties/sections/items" },
                                        {
                                            "properties": {
                                                "flex": {
                                                    "type": "boolean",
                                                    "description": "If the subsection should flex (see the CSS flex property)."
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        },
                        "required": [ "type" ]
                    }
                ]
            }
        }
    },
    "required": [ "title", "description", "author", "sections" ]
}